	"Add Shebang": {
		"scope": "sh",
		"prefix": "shebang",
		"body": [
			"#!/bin/bash",
		],
		"description": "Add shebang to script"
	}
	
	"Add Shell Colours": {
		"Scope": "sh"
		"prefix": "ShellColour",
		"body": [
			"Blue= echo -e "\e[1;34m"",
			"Green= echo -e "\e[1;32m"",
			"Red= echo -e "\e[1;31m"",
			"Purple= echo -e "\e[1;35m"",
		],
		"description": "Set shell colours to var"


	}
}